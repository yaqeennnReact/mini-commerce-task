generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
 url      = env("DATABASE_URL")  // <-- must be here for Prisma 4
}

model Product {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  imageUrl    String? @db.LongText
  price       Float
  variants    Variant[]
}

model Variant {
  id        Int      @id @default(autoincrement())
  product   Product  @relation(fields: [productId], references: [id])
  productId Int
  name      String   // e.g., "Size: M" or "Color: Red"
  priceDiff Float?   // Optional variant-specific price (fallbacks to product price when null)
  stock     Int      @default(0)
}

